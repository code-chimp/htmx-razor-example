@page "/contacts/"
@model ViewAllContactsModel
@{
    ViewData["Title"] = "Contacts";
}

<div class="row mb-1">
    <div class="col d-flex justify-content-end">
        <form asp-page="ViewAllContacts" method="get" class="row row-cols-lg-auto g-2 align-items-center">
            <div class="col-12">
                <input type="search"
                       id="search" name="q"
                       aria-label="Search"
                       class="form-control"
                       value="@(Request.Query.ContainsKey("q") ? Request.Query["q"].ToString() : "")"
                       placeholder="Search Term"/>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-search"></i>
                    Search
                </button>
            </div>
        </form>
    </div>
</div>
<div class="row mb-1">
    <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Phone</th>
            <th scope="col">Email</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var contact in Model.Contacts)
        {
            <tr>
                <td>@contact.First</td>
                <td>@contact.Last</td>
                <td>@contact.Phone</td>
                <td>@contact.Email</td>
                <td class="d-flex justify-content-end">
                    <a class="btn btn-success"
                       role="button"
                       asp-page="EditContact"
                       asp-route-id="@contact.Id">
                        <i class="fa fa-pencil"></i>
                        Edit
                    </a>&nbsp;
                    <a class="btn btn-info"
                       role="button"
                       asp-page="ViewContact"
                       asp-route-id="@contact.Id">
                        <i class="fa fa-eye"></i>
                        View
                    </a>
                </td>
            </tr>
        }
        </tbody>
        <tfoot>
        <tr>
            <td colspan="5">
                <div class="row d-flex justify-content-end p-2 g-3">
                    <a class="btn btn-outline-primary d-block" role="button" asp-page="NewContact">
                        <i class="fa fa-circle-plus"></i>
                        Add Contact
                    </a>
                </div>
            </td>
        </tr>
        </tfoot>
    </table>
</div>