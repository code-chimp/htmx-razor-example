@page "/contacts/{id:int}"
@model ContactApp.Web.Pages.ViewContactModel

@{
    ViewData["Title"] = "View Contact";
}

<div class="row justify-content-center">
    <div class="col-sm-12 col-md-6">
        <div class="card">
            <div class="card-body">
                <dl>
                    <dt>Email</dt>
                    <dd>@Model.Contact.Email</dd>
                    <dt>Name</dt>
                    <dd>@Model.Contact.Last, @Model.Contact.First</dd>
                    <dt>Phone</dt>
                    <dd>@Model.Contact.Phone</dd>
                </dl>
                <a asp-page="ViewAllContacts"
                   class="btn btn-primary"
                   role="button">
                    <i class="fa fa-home"></i>
                    Home
                </a>
                <a asp-page="EditContact"
                   asp-route-id="@Model.Contact.Id"
                   class="btn btn-success"
                   role="button">
                    <i class="fa fa-pencil"></i>
                    Edit
                </a>
            </div>
        </div>
    </div>
</div>